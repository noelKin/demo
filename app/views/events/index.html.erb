<h1>
	Index:
</h1>

<table border = "1" style = "width:50%">

	<% if @event.empty? %>
		<%= "No record exists" %>
	<% end %>
	<tr>
		<th><%= "ID" %></th>
		<th><%= "Name" %></th>
		<th><%= "Description" %></th>
		<th><%= "Show Details" %></th>
		<th><%= "Edit Details" %></th>
		<th><%= "Delete Details" %></th>
	</tr>
	
	<% @event.each do |event| %>
		<tr>
			<td><%= event.id %></td>
			<td><%= event.name %></td>
			<td><%= event.description %></td>
			<td><%= link_to 'Show', :controller => 'events', :action => 'show', :id => event %></td>
			<td><%= link_to 'Edit', :controller => 'events', :action => 'edit', :id => event %></td>
			<td><%= button_to 'Destroy', :controller => 'events', :action => 'destroy', :id => event %></td>
		</tr>
	<% end %>
	
</table>

<%= paginate @event %>

<p>
	<%= link_to 'New event', :controller => 'events', :action => 'new' %>
</p>
